<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/avatar"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_border" />

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hồ sơ cá nhân"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Thông tin cá nhân -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView android:text="Mã ID" style="@style/ProfileLabel"/>
        <TextView android:id="@+id/tvId" style="@style/ProfileValue"/>

        <TextView android:text="Tên đăng nhập" style="@style/ProfileLabel"/>
        <TextView android:id="@+id/tvUsername" style="@style/ProfileValue"/>

        <TextView android:text="Họ tên" style="@style/ProfileLabel"/>
        <TextView android:id="@+id/tvFullName" style="@style/ProfileValue"/>

        <TextView android:text="Email" style="@style/ProfileLabel"/>
        <TextView android:id="@+id/tvEmail" style="@style/ProfileValue"/>

        <TextView android:text="Giới tính" style="@style/ProfileLabel"/>
        <TextView android:id="@+id/tvGender" style="@style/ProfileValue"/>
    </LinearLayout>

    <!-- Đăng xuất -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/button_red"
        android:text="ĐĂNG XUẤT"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"/>
</LinearLayout>
